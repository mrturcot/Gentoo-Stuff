_HARDENING_FLAGS="-fPIE -fstack-protector-all -fstack-clash-protection -D_FORTIFY_SOURCE=3"
_HARDENING_FLAGS_EXTRA="-fcf-protection=full --param ssp-buffer-size=4 -D_GLIBCXX_ASSERTIONS"
_WARNINGS="-Wformat-security -Wstack-protector"
CFLAGS="${CFLAGS} ${_HARDENING_FLAGS} ${_HARDENING_FLAGS_EXTRA} ${_WARNINGS}"
CXXFLAGS="${CXXFLAGS} ${_HARDENING_FLAGS} ${_HARDENING_FLAGS_EXTRA} ${_WARNINGS}"
LDFLAGS="${LDFLAGS} -Wl,-z,now -Wl,-z,relro -z shstk"
