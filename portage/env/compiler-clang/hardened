_HARDENING_FLAGS="-fPIE -fstack-protector-all -fstack-clash-protection -D_GLIBCXX_ASSERTIONS"
_HARDENING_FLAGS_EXTRA="-fno-plt -fexceptions -fcf-protection=full -D_FORTIFY_SOURCE=3 -D_LIBCPP_ENABLE_ASSERTIONS=1"
_WARNINGS="-Wformat -Wformat-security -Werror=format-security"
CFLAGS="${CFLAGS} ${_HARDENING_FLAGS} ${_HARDENING_FLAGS_EXTRA} ${_WARNINGS}"
CXXFLAGS="${CXXFLAGS} ${_HARDENING_FLAGS} ${_HARDENING_FLAGS_EXTRA} ${_WARNINGS}"
LDFLAGS="${LDFLAGS} -Wl,-z,now,-z,relro,-z,force-ibt,-z,shstk"
