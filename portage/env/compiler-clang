## Normal GCC settings here
COMMON_FLAGS="-march=znver1 -O2 -pipe -fomit-frame-pointer"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
MAKEOPTS="-j12"

## Clang settings
# *sys-libs/llvm-libunwind needed for (${LDFLAGS} -unwindlib=libunwind)
CC="/usr/lib/llvm/15/bin/clang-15"
CXX="/usr/lib/llvm/15/bin/clang++-15"
AR="/usr/lib/llvm/15/bin/llvm-ar"
NM="/usr/lib/llvm/15/bin/llvm-nm"
RANLIB="/usr/lib/llvm/15/bin/llvm-ranlib"
LDFLAGS="${LDFLAGS} -fuse-ld=lld -rtlib=compiler-rt -unwindlib=libunwind -Wl,--as-needed"

