#!/bin/bash

cd /home/mrturcot/github/whipper
if [[ $(git remote show origin | grep 'out of date') ]]; then
while true; do
read -p "whipper: Do you want to proceed? (y/n) " yn
case $yn in
	[yY] ) echo ok, we will proceed;
		break;;
	[nN] ) echo exiting...;
		break;;
	* ) echo invalid response;;
esac
done
rm -rf build
python3 setup.py install --user
